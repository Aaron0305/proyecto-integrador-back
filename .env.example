# Configuración del Servidor
PORT=3001
NODE_ENV=production

# MongoDB Atlas - CAMBIAR POR TUS CREDENCIALES
MONGODB_URI=mongodb+srv://tu-usuario:tu-password@cluster.mongodb.net/seguimiento?retryWrites=true&w=majority

# JWT Secret - GENERAR UNO NUEVO PARA PRODUCCIÓN
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambiar_en_produccion

# URLs de la aplicación - ACTUALIZAR CON TUS DOMINIOS DE VERCEL
FRONTEND_URL=https://tu-frontend.vercel.app
CLIENT_URL=https://tu-frontend.vercel.app

# WebAuthn - Configuración para producción
WEBAUTHN_RP_ID=tu-backend.vercel.app
WEBAUTHN_ORIGIN=https://tu-backend.vercel.app

# CORS
CORS_ORIGIN=https://tu-frontend.vercel.app

# Opciones: gmail, sendgrid, aws-ses, smtp
EMAIL_PROVIDER=gmail

# Para Gmail (Necesitas App Password)
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-app-password-de-gmail
EMAIL_FROM=tu-email@gmail.com
EMAIL_FROM_NAME=Sistema de Seguimiento de Docentes

# Para SendGrid
SENDGRID_API_KEY=tu-sendgrid-api-key

# Para AWS SES
AWS_SES_HOST=email-smtp.us-east-1.amazonaws.com
AWS_SES_ACCESS_KEY=tu-aws-access-key
AWS_SES_SECRET_KEY=tu-aws-secret-key

# Para SMTP personalizado
SMTP_HOST=smtp.tu-servidor.com
SMTP_PORT=587
SMTP_USER=tu-usuario-smtp
SMTP_PASSWORD=tu-password-smtp

# Información de la empresa
COMPANY_NAME=Sistema de Seguimiento de Docentes
SUPPORT_EMAIL=soporte@tu-empresa.com

# Configuración de Rate Limiting (opcional - valores por defecto incluidos)
# AUTH_RATE_LIMIT_WINDOW=900000
# AUTH_RATE_LIMIT_MAX=5
# PASSWORD_RESET_RATE_LIMIT_WINDOW=3600000
# PASSWORD_RESET_RATE_LIMIT_MAX=3
